{% extends 'layout.html.twig' %}
{% block content %}
    <!-- row -->


    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i>Table des inscriptions</h4>
                            <hr>
                            <thead>
                            <tr>
                                <th class="hidden-phone">Nom de l'eleve</th>
                                <th class="hidden-phone">Prenom de l'eleve</th>
                                <th class="hidden-phone">Nom de l evenement</th>
                                <th><i class=" fa fa-edit"></i> Status</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for inscription in c %}
                                <tr>
                                    <td class="hidden-phone">{{ inscription.User.username }}</td>
                                    <td class="hidden-phone">{{ inscription.User.email }}</td>
                                    <td class="hidden-phone">{{ inscription.Evenement.nomE }}</td>
                                    <td><span class="label label-info label-mini">{{ inscription.statut }}</span></td>
                                    <td>

                                        <a href="{{ path('modifierInscription',{'id':inscription.id}) }}"><button class="btn btn-success btn-xs"><i class=" fa fa-check"></i></button></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /col-md-12 -->
            </div>
            <!-- /row -->

        </section>
         </section>
{% endblock %}