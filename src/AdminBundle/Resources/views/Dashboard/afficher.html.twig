{% extends 'layout.html.twig' %}
{% block content %}
    <!-- row -->
    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> Catgories des evenements</h4>
                            <hr>
                            <thead>
                            <tr>
                                <th><i class="fa fa-bullhorn"></i> ID categorie</th>
                                <th class="hidden-phone">Nom categorie</th>
                                <th> Description</th>
                                <th>Image</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categorie in categorie %}
                                <tr>
                                    <td>
                                        <a href="basic_table.html#">{{ categorie.id }}</a>
                                    </td>
                                    <td class="hidden-phone">{{ categorie.nomCategorieEvenement }}</td>
                                    <td class="hidden-phone">{{ categorie.description }}</td>
                                    <td class="hidden-phone">{{ categorie.image }}</td>
                                    <td>
                                        <a href="{{ path('modifiercategorie',{'id':categorie.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                        <a href="{{ path('supprimerCategorie',{'id':categorie.id}) }}"><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> les evenements</h4>
                            <hr>
                            <thead>
                            <tr>
                                <th> <i class="fa fa-bullhorn"></i> ID evenement</th>
                                <th class="hidden-phone">Nom </th>
                                <th class="hidden-phone">Capacite</th>
                                <th class="hidden-phone">description</th>
                                <th class="hidden-phone">Prix</th>
                                <th class="hidden-phone">Date</th>
                                <th class="hidden-phone">Categorie Evenement</th>
                                <th> Status</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for evenement in c %}
                                <tr>
                                    <td>
                                        <a href="basic_table.html#">{{ evenement.id }}</a>
                                    </td>
                                    <td class="hidden-phone">{{ evenement.nomE }}</td>
                                    <td class="hidden-phone">{{ evenement.capaciteE }}</td>
                                    <td class="hidden-phone">{{ evenement.description }}</td>
                                    <td class="hidden-phone">{{ evenement.prixE }}</td>
                                    <td class="hidden-phone">{{ evenement.dateD|date }}</td>
                                    <td class="hidden-phone">{{ evenement.categorieEvenement.nomCategorieEvenement }}</td>
                                    <td><span class="label label-info label-mini">Due</span></td>
                                    <td>
                                        <a href="{{ path('modifierEvenement',{'id':evenement.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                        <a href="{{ path('supprimerEvenement',{'id':evenement.id}) }}"><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /col-md-12 -->
            </div>
            <!-- /row -->
        </section>
    </section>
{% endblock %}
