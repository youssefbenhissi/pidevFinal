{% extends 'layout.html.twig' %}
{% block content %}
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Contact Form</h3>
            <!-- BASIC FORM ELELEMNTS -->
            <div class="col-lg-12">
                <div class="form-panel">
                </div>
            </div>
            <div class="row mt">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <h4 class="title">modification form</h4>
                    <div id="message"></div>
                    {{   form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.nomE, {'attr': {'class': 'form-control'} }) }}
                        <div class="validate"></div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.capaciteE, {'attr': {'class': 'form-control'} }) }}
                        <div class="validate"></div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.description, {'attr': {'class': 'form-control'} }) }}
                        <div class="validate"></div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.imgE, {'attr': {'class': 'form-control'} }) }}
                        <div class="validate"></div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.prixE, {'attr': {'class': 'form-control'} }) }}
                        <div class="validate"></div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.dateD, {'attr': {'class': 'form-control'} }) }}
                        <div class="validate"></div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.categorieEvenement, {'attr': {'class': 'form-control'} }) }}
                        <div class="validate"></div>
                    </div>

                    <br>
                    <br>
                    <div class="form-send">
                        {{ form_row(form.Modifier, {'attr': {'class': 'btn btn-large btn-primary'} }) }}
                    </div>

                    {{   form_end(form) }}
                </div>
            </div>
        </section>
    </section>
{% endblock %}
