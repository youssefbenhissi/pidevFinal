{% extends 'layout.html.twig' %}
{% block content %}
    <!-- row -->
    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">

                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> Table des clubs</h4>
                            <hr>
                            <thead>
                            <tr>
                                <th><i class="fa fa-bullhorn"></i>libelle</th>
                                <th class="hidden-phone">description</th>
                                <th class="hidden-phone">image</th>
                                <th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cat in cats %}
                                <tr>
                                    <td class="hidden-phone">{{ cat.libelle }}</td>
                                    <td class="hidden-phone">{{ cat.description }}</td>
                                    <td><img src="{{ asset('images/') }}{{ cat.nomImage }}" style="width: 100px;height: 100px"></td>
                                    <td>
                                        <a href={{path('bibliothequeback_updatCat',{'id':cat.id})}}><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                        <a href="{{path('bibliothequeback_deleteCat',{'id':cat.id})}}"><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>

                                    </td>
                                    <td><a href="{{path('bibliothequeback_detailsCat',{'id':cat.id})}}"><button class="fa fa-edit">ajouter un livre</button></a></td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="row mt" style=" display: flex; flex-direction: row; flex-wrap: wrap;justify-content: center; align-items: center;">
                            <div class="col-sm-3" style="width: 100%;">
                                <section class="panel" style="
    width: 100%;
">
                                    <div class="panel-body" style="
    width: fit-content;
    margin: auto;
">
                                        <a style="
    float: left;
    width: fit-content;
" href="{{ path('bibliothequeback_ajoutCat') }}" class="btn btn-compose" >
                                            <i class="fa fa-pencil"></i> Ajouter une categorie
                                        </a>
                                        <a style="
    float: left;
    margin: auto;
    width: fit-content;
    margin-left: 13px;
" href="{{ path('export') }}" class="btn btn-compose" >
                                            <i class="fa fa-pencil"></i> Export
                                        </a>
                                    </div>
                                </section>
                            </div>
                        </div>


                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </div>
        </section>
    </section>
{% endblock %}