{% extends 'layout.html.twig' %}
    {% block content %}
        <section id="main-content">
            <section class="wrapper">
                <div class="row mt">
                    <div class="col-lg-12">
                        <h4><i class="fa fa-angle-right"></i>Modifier une categorie</h4>
                        <div class="form-panel">
                            <div class=" form">
                                {{   form_start(form, {'attr': {'class': 'cmxform form-horizontal style-form','novalidate': 'novalidate'} }) }}
                                <div class="form-group ">
                                    <div class="col-lg-10">
                                        {{ form_label(form.libelle,'libelle de  la categorie',  {'attr': {'class': 'cmxform form-horizontal style-form'}} ) }}
                                        {{ form_widget(form.libelle,{'attr': {'class' : 'form-control'}}) }}

                                    </div>
                                </div>
                                <div class="form-group ">
                                    <div class="col-lg-10">
                                        {{ form_label(form.file,'fichier de  la categorie',  {'attr': {'class': 'cmxform form-horizontal style-form'}} ) }}
                                        {{ form_widget(form.file,{'attr': {'class' : 'form-control'}}) }}

                                    </div>
                                </div>
                                <div class="form-group ">
                                    <div class="col-lg-10">
                                        {{ form_label(form.description,'dsecription de  la categorie',  {'attr': {'class': 'cmxform form-horizontal style-form'}} ) }}
                                        {{ form_widget(form.description,{'attr': {'class' : 'form-control'}}) }}

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        {{ form_row(form.Ajouter, {'attr': {'class': 'btn btn-theme','style':'float:left;','value':'ajouter'} }) }}
                                    </div>
                                </div>

                                {{ form_end(form) }}
                            </div>
                        </div>
                        <!-- /form-panel -->
                    </div>
                    <!-- /col-lg-12 -->
                </div>
            </section>
            <!-- /wrapper -->
        </section>
        <!-- /MAIN CONTENT -->

    {% endblock %}