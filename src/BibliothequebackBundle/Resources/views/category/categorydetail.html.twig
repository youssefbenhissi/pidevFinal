{% extends 'layout.html.twig' %}
{% block content %}

{% set urlc= app.request.uri %}


{% set long = urlc|length %}

{% set res=  urlc|slice(69, long) %}


<center>




    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div style="
    background-image: url({{ asset('images/' ~ category.nomImage) }});
    background-repeat: no-repeat;
    width: 100%;
    height: 253px;
    padding: 0;
    background-position-x: center;
"></div>


                <h1>{{ category.libelle }}</h1>
                <div class="col-md-12">
                    <div class="form-panel">
                        <div class=" form">
                            {{   form_start(form, {'attr': {'class': 'cmxform form-horizontal style-form','novalidate': 'novalidate'} }) }}
                            <div class="form-group ">
                                <label for="cname" class="control-label col-lg-2">Nom du club (required)</label>
                                <div class="col-lg-10">
                                    {{ form_row(form.nom, {'attr': {'class': 'form-control'} }) }}

                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="cname" class="control-label col-lg-2">Nom du club (required)</label>
                                <div class="col-lg-10">
                                    {{ form_row(form.file, {'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="cname" class="control-label col-lg-2">Nom du club (required)</label>
                                <div class="col-lg-10">
                                    {{ form_row(form.description, {'attr': {'class': 'form-control'} }) }}

                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="cname" class="control-label col-lg-2">Nom du club (required)</label>
                                <div class="col-lg-10">
                                    {{ form_row(form.auteur, {'attr': {'class': 'form-control'} }) }}

                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="cname" class="control-label col-lg-2">Nom du club (required)</label>
                                <div class="col-lg-10">
                                    {{ form_row(form.nombredepage, {'attr': {'class': 'form-control'} }) }}

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    {{ form_row(form.Ajouter, {'attr': {'class': 'btn btn-theme','style':'float:left;','value':'ajouter'} }) }}
                                </div>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                    <!-- /form-panel -->
                    <div class="content-panel">
                        <div class="row mt" style=" display: flex; flex-direction: row; flex-wrap: wrap;justify-content: center; align-items: center;">
                            <div class="col-sm-3">
                                <section class="panel">
                                    <div class="panel-body">
                                        <a href="{{ path('bibliothequeback_ajoutCat') }}" class="btn btn-compose" >
                                            <i class="fa fa-pencil"></i> Ajouter un club
                                        </a>
                                    </div>
                                </section>
                            </div>
                        </div>
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> Table des clubs</h4>
                            <hr>
                            <thead>
                            <tr>
                                <th class="hidden-phone">Id</th>
                                <th class="hidden-phone">Category</th>
                                <th class="hidden-phone">Nom</th>
                                <th class="hidden-phone">Image</th>
                                <th class="hidden-phone">Description</th>
                                <th class="hidden-phone">Auteur</th>
                                <th class="hidden-phone">Nombre De Page</th>
                                <th class="hidden-phone">modifier</th>
                                <th class="hidden-phone">supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for livre in livres %}

                                <tr>
                                    <td>{{ livre.id }}</td>
                                    <td>{{ livre.category.libelle }}</td>
                                    <td>{{ livre.nom }}</td>
                                    <td><img src="{{ asset('images/') }}{{ livre.nomImage }}" style="width: 100px;height: 100px"></td>
                                    <td class="hidden-phone">{{ livre.description }} </td>
                                    <td class="center hidden-phone">{{ livre.auteur }} </td>
                                    <td class="center hidden-phone">{{ livre.nombredepage }} </td>


                                    <td ><button type="button" class="btn btn-labeled btn-infot"><span class="btn-label"></span><a href="">modifier</a> </button></td>
                                    <td ><button type="button" class="btn btn-labeled btn-danger"> <span class="btn-label"></span><a href="">supprimer</a> </button></td>

                                </tr>

                            {% endfor %}
                            </tbody>
                        </table>



                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </div>
        </section>
    </section>
{% endblock %}