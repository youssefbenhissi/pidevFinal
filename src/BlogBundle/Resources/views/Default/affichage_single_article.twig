{% extends 'base.html.twig' %}

{% block title %}{{ articlex.titre}}{% endblock %}

{% block activebar_menu %}
    <li class="nav-item"><a href="#" class="nav-link pl-0">Home</a></li>
    <li class="nav-item"><a href="#" class="nav-link">Clubs</a></li>
    <li class="nav-item active"><a href="#" class="nav-link">Blog</a></li>
{% endblock %}


{% block content %}
    <section class="hero-wrap hero-wrap-2" style="background-image: url('{{  asset('assets/images/') ~ articlex.image }}');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center fadeInUp ftco-animated">
                    <h1 class="mb-2 bread">{{ articlex.titre}}</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="##">Accueil <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a href="{{ path('Blog_Homepage_User') }}">Blog <i class="ion-ios-arrow-forward"></i></a></span> <span>{{ articlex.titre }} <i class="ion-ios-arrow-forward"></i></span></p>
                    <p class="breadcrumbs"><span class="mr-2" style="background-color: #4b4bff;border-radius: 9px;">{{ categorie.nom }}</span></p>

                </div>
            </div>
        </div>
    </section>



    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 ftco-animate fadeInUp ftco-animated">
                    <h2 class="mb-3"></h2>
                    <p>{{ articlex.description }}</p>
                    <p>
                        <img src="{{  asset('assets/images/') ~ articlex.image }}" alt="{{ articlex.titre }}" class="img-fluid">
                    </p>
                     <p>{{ articlex.contenu }}</p>
                    <div class="tag-widget post-tag-container mb-5 mt-5">
                        <div class="tagcloud">
                             {% if tag1 != null %}
                            <a href="{{ path('Affiche_tag_User',{'id':tag1.id})}}" class="tag-cloud-link">{{ tag1.nom }}</a>
                            {% endif %}
{% if tag2 != null %}
                            <a href="{{ path('Affiche_tag_User',{'id':tag2.id})}}" class="tag-cloud-link">{{ tag2.nom }}</a>
    {% endif %}
                            {% if tag3 != null %}
                            <a href="{{ path('Affiche_tag_User',{'id':tag3.id})}}" class="tag-cloud-link">{{ tag3.nom }}</a>
                            {% endif %}
                        </div>
                    </div>





                </div> <!-- .col-md-8 -->

                <div class="col-lg-4 sidebar ftco-animate fadeInUp ftco-animated">
                    <div class="sidebar-box">

                        <form action="#" class="search-form">
                            <div class="form-group">
                                <span class="icon icon-search"></span>
                                <input type="text" class="form-control" placeholder="Rechercher">
                            </div>
                        </form>

                    </div>
                    <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
                        <h3>Categories</h3>
                        <ul class="categories">
                            {% for categoris in categories %}
                            <li><a href="{{ path('Affiche_categorie_User',{'id':categoris.id})}}">{{ categoris.nom }} </a></li>
                            {% endfor %}
                        </ul>
                    </div>



                    <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
                        <h3>Tag Cloud</h3>
                        <ul class="tagcloud m-0 p-0">
                            {% for alltag in alltags %}
                                <a href="{{ path('Affiche_tag_User',{'id':alltag.id})}}" class="tag-cloud-link">{{ alltag.nom }}</a>
                            {% endfor %}
                        </ul>
                    </div>


                </div><!-- END COL -->
            </div>
        </div>
    </section>




{% endblock %}
