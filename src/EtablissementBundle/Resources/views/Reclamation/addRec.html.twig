{% extends 'base.html.twig' %}
{% block content %}
    <section class="ftco-section ftco-no-pt ftco-no-pb contact-section">
        <div class="container">
            <div class="row d-flex align-items-stretch no-gutters">
                <div class="col-md-6 p-4 p-md-5 order-md-last bg-light">
                    <h1>Write your complain</h1>
                    {{ form_start(Form) }}
                    <div class="form-group">
                    {{ form_widget(Form.sujet,{'attr':{'type':'text','class':'form-control','placeholder':'Subject...'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(Form.description,{'attr':{'type':'text','class':'form-control','placeholder':'Message...'}}) }}
                    </div>
                    {{ form_end(Form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}