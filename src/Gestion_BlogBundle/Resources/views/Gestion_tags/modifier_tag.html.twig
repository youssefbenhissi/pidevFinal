{% block adminscript %}
    <script
            src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous"></script>

    <script
            src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"
            integrity="sha256-T0Vest3yCU7pafRw9r+settMBX6JkKN06dqBnpQ8d30="
            crossorigin="anonymous"></script>

    <script>
        $(document).ready(function() {
            $("[for='gestion_blogbundle_tags_nom']").append('<span style="color:red;" id="alert"></span>');
            $('#gestion_blogbundle_tags_nom').on('keyup',function(){

                if($(this).val().replace(/^\s+|\s+$/g, "").length == 0 ){
                    $(this).val('');
                    $('#alert').show();
                    $('#alert').html('<span style="color:red;" id="alert"> (Nom ne doit pas être vide) </span>');
                    $('#gestion_blogbundle_tags_nom').css('border-color','red');
                    $('.btn').attr("disabled", true);
                    $( "#gestion_blogbundle_tags_nom" ).effect( "shake" );
                }else if($(this).val().replace(/^\s+|\s+$/g, "").length != 0){
                    $('#alert').hide();
                    $('#gestion_blogbundle_tags_nom').css('border-color','');
                    $('.btn').attr("disabled", false);

                }

                if($('#gestion_blogbundle_tags_nom').val().replace(/ /g,'').length < 3){
                    $('#alert').show();
                    $('#alert').html('<span style="color:red;" id="alert"> (Il faut au min 3 carractères) </span>');
                    $('#gestion_blogbundle_tags_nom').css('border-color','red');
                    $('.btn').attr("disabled", true);
                }
            });


        });




    </script>
{% endblock %}
