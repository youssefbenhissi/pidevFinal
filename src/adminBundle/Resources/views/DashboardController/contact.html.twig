{% extends 'layout.html.twig' %}
{% block content %}
<section id="main-content">
<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Form Validation</h3>
    <!-- BASIC FORM VALIDATION -->
    <div class="row mt">
        <div class="col-lg-12">
            <h4><i class="fa fa-angle-right"></i> Basic Validations</h4>
            <div class="form-panel">
                {{   form_start(form, {'attr': {'class': 'form-horizontal style-form'} }) }}
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">nouvelle annonce</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.newsContenu,{'attr': {'class' : 'form-control','id':'f-name'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            {{ form_widget(form.enregistrer,{'attr': {'class' : 'btn btn-theme','type':'submit-name'}}) }}
                        </div>
                    </div>
                {{form_end(form)}}
            </div>
            <!-- /form-panel -->
        </div>
        <!-- /col-lg-12 -->
    </div>
    <!-- /row -->
    <!-- FORM VALIDATION -->
</section></section>
{% endblock %}