{% extends 'base.html.twig' %}
{% block content %}
    <section class="ftco-section ftco-consult ftco-no-pt ftco-no-pb" style="background-image: url('{{asset('/assets/images/' ~ club.image)}}');" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-6 py-5 px-md-5 bg-primary">
                <div class="heading-section heading-section-white ftco-animate mb-5">
                    <span class="subheading">Request A Quote</span>
                    <h2 class="mb-4">Request A Quote</h2>
                    <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia,
                        there live the blind texts.</p>
                </div>
                {{ form_start(form) }}
                    <div class="d-md-flex">
                        <div class="form-group">
                            {{ form_row(form.reponsePr, {'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group ml-md-4">
                            {{ form_row(form.reponseDe, {'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="d-md-flex">

                        <div class="form-group ml-md-4">
                            {{ form_row(form.reponseTr, {'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group ml-md-4">
                            {{ form_row(form.Reserver, {'attr': {'class': 'btn btn-secondary py-3 px-4','value':'S incrire'} }) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </section>
{% endblock %}